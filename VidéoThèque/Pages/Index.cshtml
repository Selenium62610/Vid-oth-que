@page
@model IndexModel
@{
    ViewData["Title"] = "Accueil";
}

<h1>Connexion</h1>
<div class="row">
    <div class="col-md-4">
        <form>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Identifiant</label>
                <input type="text" asp-for="SearchIdentifiant" class="form-control" />
                <span asp-validation-for="SearchIdentifiant" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Mot de passe</label>
                <input type="password" asp-for="SearchMdp" class="form-control" />
                <span asp-validation-for="SearchMdp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Se connecter" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>


<div>
    <a asp-page="./Users/Inscription">Vous inscrire ?</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}