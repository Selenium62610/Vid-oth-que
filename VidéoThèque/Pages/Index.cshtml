@page
@model IndexModel
@{
    ViewData["Title"] = "Accueil";
}

<h1>Connexion</h1>
<div class="row">
    <div class="col-md-4">
        <form>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Identifiant</label>
                <input type="text" asp-for="SearchIdentifiant" class="form-control" />
                <span asp-validation-for="SearchIdentifiant" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Mot de passe</label>
                <input type="password" asp-for="SearchMdp" class="form-control" />
                <span asp-validation-for="SearchMdp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Se connecter" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<table class="table">

    <tbody>
        <!-- Pour chaque items dans la liste de film on affiche leur titre, date, genre et le prix -->
        @foreach (var item in Model.User)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Identifiant)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MotDePasse)
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}