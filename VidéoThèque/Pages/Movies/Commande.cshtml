@page
@model VidéoThèque.Pages.Movies.DetailsModel

@{
    ViewData["Title"] = "Détail Commande";
}

<h1>Détails de la commande</h1>

<div>
    <h4>Récapitulatif</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Image)
        </dt>
        <dd class="col-sm-10">
            <img src="@Url.Content("~/img/"+Model.Movie.Image+".PNG")" height="250px" width="200px"
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.ReleaseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.ReleaseDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Genre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Realisateur)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Realisateur)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Acteurs)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Acteurs)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Synopsis)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Synopsis)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Price)
        </dd>

    </dl>
</div>

<!DOCTYPE html>
<html>
<body>

    <div class="col-md-10">
        @Html.DropDownListFor(model => model.Movie.Price, new List<SelectListItem>
                {
                    new SelectListItem {Text = "24H", Value = "3.99", Selected = true },
                    new SelectListItem {Text = "48", Value = "6.99" },
                    new SelectListItem {Text = "64h", Value = "10.0" },
                }, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Movie.Price, "", new { @class = "text-danger" })
    </div>

    <!-- Gérer localement le changement de prix genre si SelectListItem change de valeur baaah on fait X2 u X3-->

</body>
</html>

