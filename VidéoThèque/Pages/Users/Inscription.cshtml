@page
@model VidéoThèque.Pages.Users.InscriptionModel
@{
    ViewData["Title"] = "Inscription";
}

<h1>Inscription</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <!-- Vérification des données rentrées à l'aide du asp-validation-for -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="User.Nom" class="control-label"></label>
                <input asp-for="User.Nom" class="form-control" />
                <span asp-validation-for="User.Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Prenom" class="control-label"></label>
                <input asp-for="User.Prenom" class="form-control" />
                <span asp-validation-for="User.Prenom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.DateDeNaissance" class="control-label"></label>
                <input asp-for="User.DateDeNaissance" class="form-control" />
                <span asp-validation-for="User.DateDeNaissance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Identifiant" class="control-label"></label>
                <input asp-for="User.Identifiant" class="form-control" />
                <span asp-validation-for="User.Identifiant" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.MotDePasse" class="control-label"></label>
                <input asp-for="User.MotDePasse" class="form-control" />
                <span asp-validation-for="User.MotDePasse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="S'inscrire" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="../Index">Déjà un compte ?</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}